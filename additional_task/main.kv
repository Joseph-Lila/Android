<MyLabel@MDLabel>:
    halign: "center"
    valign: "center"
    theme_text_color: "Custom"
    text_color: app.theme_cls.primary_dark
    font_style: "Button"
    markup: True

<Check@MDCheckbox>:
    group: 'group'
    size_hint: None, None
    size: dp(48), dp(48)

<FirstScreen>:
    cont: cont

    GridLayout:
        id: cont
        cols: 2


<SecondScreen>:
    id: second_scr
    lst: lst
    spinner: spinner

    MDBoxLayout:
        orientation: "vertical"

        ScrollView:

            MDList:
                id: lst

        Spinner:
            id: spinner
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: .3, .2
            on_text: root.get_actual_items()

<MainBody>:
    text_field: text_field
    first_check: first_check
    second_check: second_check

    MDCard:
        orientation: "vertical"

        MDTopAppBar:
            title: "Application_2"
            use_overflow: True

        MDBoxLayout:
            orientation: "vertical"

            GridLayout:
                cols: 2
                padding: 30

                MDBoxLayout:
                    orientation: "vertical"

                    GridLayout:
                        cols: 2
                        padding: 30

                        Check:
                            id: first_check
                            disabled: True
                            pos_hint: {'center_x': .4, 'center_y': .5}
                            on_active: root.go_to_first_railway_station()

                        MyLabel:
                            text: "Вокзал №1"

                    GridLayout:
                        cols: 2
                        padding: 30

                        Check:
                            id: second_check
                            disabled: True
                            pos_hint: {'center_x': .4, 'center_y': .5}
                            on_active: root.go_to_second_railway_station()

                        MyLabel:
                            text: "Вокзал №2"

                MDFlatButton:
                    font_style: "H3"
                    text: "Поиск"
                    md_bg_color: 1, 0, 1, 1
                    halign: "center"
                    size_hint_x: .5
                    theme_text_color: "Primary"
                    color: (1, 0, .8, 1)
                    on_press: root.show_activities()

            MDTextField:
                id: text_field
                multiline: True
                hint_text: ""
                size_hint_x: .8
                pos_hint: {"center_x": .5}

            Widget:



<ScreenMaster>:
    id: master
    main_body: main_body

    Screen:
        name: "main_activity"

        MainBody:
            id: main_body
            master: master

    FirstScreen:
        name: "first_railway_station"

    SecondScreen:
        name: "second_railway_station"

