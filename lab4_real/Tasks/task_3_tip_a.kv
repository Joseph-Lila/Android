<Task3TipA>:
    container: container
    route_number: route_number

    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Prakapenka - Lab4 (Task 3 Tip A)"
            use_overflow: True
            right_action_items: [["arrow-left-bold", lambda x: root.go_back()]]
            elevation: 10

        GridLayout:
            cols: 1

            GridLayout:
                rows: 2
                spacing: 25
                padding: 50

                MDTextField:
                    id: route_number
                    hint_text: "Enter route_number"
                    mode: "fill"
                    text: ''
                    fill_color: 0, 0, 0, .4
                    icon_right: "counter"
                    icon_right_color: app.theme_cls.primary_color
                    size_hint: .8, None
                    pos_hint: {"center_x": .5, "center_y": .5}
                    write_tab: False
                    input_filter: "int"

                Button:
                    text: "Search buses"
                    background_color: 1, 0, 0, 1
                    on_press: root.search_buses()

            MDBoxLayout:
                orientation: 'vertical'

                ScrollView:

                    MDList:
                        id: container